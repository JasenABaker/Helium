<p id="notice"><%= notice %></p>
<div class="top">
<h1>Employees</h1>

<%= button_to 'Generate Emails', generate_path, method: :get%>
<a class="btn btn-dark" href="/employees/new">New Employee</a>
</div>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Birth date</th>
      <th scope="col">Title</th>
      <th scope="col">Number of Children</th>
      <th scope="col">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= link_to employee.first_name, edit_employee_path(employee) %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.birth_date.strftime('%m/%d/%y') %></td>
        <td><%= employee.title %></td>
        <td><%= employee.children.count %></td>
        <td><%= employee.email %></td>
        <td><a class="btn btn-dark"<%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


