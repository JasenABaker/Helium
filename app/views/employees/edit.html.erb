<h3>Update Emloyees Details - <%= @employee.first_name %> <%= @employee.last_name %></h3>

<%= render 'form', employee: @employee %>

<br />
<h4>Children</h4>
    <% if @employee.children.length == 0 %>
        <p>This employee does not have children </p>
    <% else %>
    <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Birth date</th>
      <th scope="col">Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee.children.each do |child| %>
      <tr>
        <td><%= child.id %></td>
        <td><%= child.first_name%></td>
        <td><%= child.last_name %></td>
        <td><%= child.birth_date.strftime('%m/%d/%y') %></td>
        <td><%= child.gender %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'Back', employees_path %>
